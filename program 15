#include <iostream>
using namespace std;

class Number {
private:
    int value;
public:
    Number(int v = 0) {
        value = v;
    }
    void show() {
        cout << "Value: " << value << endl;
    }
    // Friend functions for operator overloading
    friend Number operator-(Number obj);                
    friend Number operator+(Number obj1, Number obj2);  
};
// Unary minus operator overloading
Number operator-(Number obj) {
    return Number(-obj.value);
}
// Binary plus operator overloading
Number operator+(Number obj1, Number obj2) {
    return Number(obj1.value + obj2.value);
}
int main() {
    Number n1(10), n2(20), n3;
    cout << "Original values:" << endl;
    n1.show();
    n2.show();
    n3 = n1 + n2;
    cout << "\nAfter n1 + n2:" << endl;
    n3.show();
    n3 = -n1;
    cout << "\nAfter -n1:" << endl;
    n3.show();
    return 0;
}


